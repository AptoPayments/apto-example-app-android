<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/force_update_title"
        android:textColor="@color/title_text_color"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="4sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/force_update_description"
        android:textColor="@color/default_text_color"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/continue_button"
        android:background="@color/colorPrimary"
        style="@style/ThemeTwo.ContinueButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/llsdk_medium_margin"
        android:layout_marginBottom="@dimen/llsdk_medium_margin"
        android:textSize="18sp"
        android:text="@string/force_update_continue_button_text" />

</RelativeLayout>
